<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/otmp_to_create"
        android:hint="Proyecto"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Proyectos pendientes"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/label1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/create_registry" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/pendant_otmp_list"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label1"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Crear"
        android:id="@+id/create_registry"
        android:layout_below="@+id/otmp_to_create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Buscar"
        android:id="@+id/search_registry"
        android:layout_below="@+id/pendant_otmp_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>